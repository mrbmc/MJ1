package com.whtn {	import flash.display.Sprite; 	public class Drawing extends Sprite { 		public static function drawBox(obj:Sprite=null,w:int=100,h:int=60,bgcolor:Number=0x333333,bgalpha:Number=1,lncolor=0xFFFFFF,lnalpha:Number=1):Sprite {			if(obj == null) {				obj = new Sprite();				//addChild(obj);			} else {				obj.graphics.lineStyle(0,lncolor,lnalpha);				obj.graphics.beginFill(bgcolor,bgalpha);				obj.graphics.drawRoundRect(0,0,w,h,5);				obj.graphics.endFill();			}			return obj;		}		public static function setColor(obj:Sprite=null,c:Number=0xFFFFFF,a:Number=1):void {			obj.graphics.lineStyle(0,0xffffff,.5);			obj.graphics.beginFill(c,a);			obj.graphics.drawRect(0,0,obj.width-2,obj.height-2);			obj.graphics.endFill();		}		public static function hex2rgb (hex):Object {			var red = hex>>16;			var greenBlue = hex-(red<<16)			var green = greenBlue>>8;			var blue = greenBlue - (green << 8);			//trace("r: " + red + " g: " + green + " b: " + blue);			return({r:red, g:green, b:blue});		}		public static function hex2hsv (hex):Object {			var hsvColor:Object = {};			var RGB:Object = Drawing.hex2rgb(hex);						var min:Number = RGB.r;			if (RGB.g < min){min = RGB.g;}			if (RGB.b < min){min = RGB.b;}						var max:Number = RGB.r;			if (RGB.g > max){max = RGB.g;}			if (RGB.b > max){max = RGB.b;}						hsvColor.v = max * 100;						var deltaColor:Number = max - min;						if (max != 0){				hsvColor.s = deltaColor / max * 100;			} else {				hsvColor.s = 0;				hsvColor.h = -1;			}						if( RGB.r == max ){				hsvColor.h = ( RGB.g - RGB.b ) / deltaColor;			}else if( RGB.g == max ){				hsvColor.h = 2 + ( RGB.b - RGB.r ) / deltaColor;			}else{				hsvColor.h = 4 + ( RGB.r - RGB.g ) / deltaColor;			}			hsvColor.h *= 60;						if( hsvColor.h < 0 ){hsvColor.h += 360;}			return hsvColor;		}	}}