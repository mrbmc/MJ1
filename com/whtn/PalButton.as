package com.whtn {	import flash.display.Sprite;	import flash.text.TextFormat;	import flash.text.TextField;	import flash.events.MouseEvent;		import com.whtn.Drawing;	public class PalButton extends Sprite {		public var bg:Sprite = new Sprite();		public var lite:Sprite = new Sprite();		public var spot:Sprite = new Sprite();		public var lbl:TextField;		public var lit:Boolean = false;		public var index:String;		private var w:Number;		private var h:Number;		private var c:Number;		var myFont:FontDIN = new FontDIN();		var myTextFormat:TextFormat = new TextFormat();		public function PalButton (i:Object,w:int,h:int,c:Number=0x000000,bevel=false) {			this.index = (i);			this.name = "mc"+i;			this.w = w;			this.h = h;			this.c = c;			ww = (bevel) ? w-2 : w;			hh = (bevel) ? h-2 : h;			if(bevel) {				shade = Drawing.drawBox(null,w,h,c,1,0x111111,1);				addChild(shade);				shade.x = shade.y = -1;				bevel = Drawing.drawBox(null,ww,hh,c,1,0xDDDDDD,1);				bevel.x = bevel.y = -1;				addChild(bevel);			}			bg.x=bg.y=0;			addChild(bg);			Drawing.drawBox(bg,ww,hh,c,1,0,0);			Drawing.drawBox(lite,ww,hh,0xFFFFFF,1,0,0);			addChild(lite);			this.lite.alpha = 0;						lbl = new TextField();			lbl.text = i;			lbl.x = 5;			lbl.y = 5;			lbl.textColor = 0x999999;			lbl.selectable = false;			this.addChild(lbl);			myTextFormat.font = myFont.fontName;			myTextFormat.size = 12;			lbl.setTextFormat(myTextFormat);			lbl.embedFonts = true;			lbl.selectable = false;			addChild(spot);			Drawing.drawBox(spot,w,h,0xFF0FF,0,0,0);			spot.buttonMode = true;			spot.useHandCursor = true;		}	}}